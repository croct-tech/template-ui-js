{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build",
    "noEmit": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.stories.ts",
  ]
}
